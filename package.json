    "@types/node": "^9.6.5",
    "@types/strip-ansi": "^3.0.0",
    "@types/text-table": "^0.2.0",
    "babel-eslint": "^8.2.3",
    "chalk": "^2.4.1",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-react": "^7.7.0",
    "execa": "^0.10.0",
    "globby": "^8.0.1",
    "meow": "^4.0.0",
    "strip-ansi": "^4.0.0",
    "text-table": "^0.2.0",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1"
  },
  "devDependencies": {
    "prettier": "^1.12.1",
    "typescript": "^2.8.3"
